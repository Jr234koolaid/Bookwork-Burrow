<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/orderDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:textColor="@color/very_dark_blue"
        android:fontFamily="@font/commissioner_bold"
        android:text="Date"/>

    <TextView
        android:id="@+id/orderBookList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginStart="25dp"
        android:textColor="@color/black"
        android:fontFamily="@font/commissioner_medium"
        android:text="List of books"/>
    <TextView
        android:id="@+id/orderPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:layout_marginStart="25dp"
        android:textColor="@color/pink"
        android:fontFamily="@font/commissioner_bold"
        android:text="Price: $"/>

    <View
        android:id="@+id/order_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="15dp"
        android:background="@color/gray" />


</LinearLayout>