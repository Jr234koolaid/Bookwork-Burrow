<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/confirm_root"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.ConfirmPurchaseActivity">

    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        android:src="@drawable/arrow"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/commissioner_medium"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="10dp"
        android:textSize="35sp"
        android:textColor="@color/black"
        android:text="Confirm Purchase" />

    <!--Add each item dynamically in this view-->
    <ScrollView
        android:layout_width="330dp"
        android:layout_height="346dp"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/booksAddedContainer"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/discount_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:fontFamily="@font/commissioner_medium"
            android:hint="@string/enter_discount_code"
            android:padding="10dp"
            android:textColor="@color/very_dark_blue"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/discount_apply_button"
            style="@style/login_button_enter"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:text="Apply"
            android:textSize="15sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/subtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/commissioner_regular"
        android:text="Subtotal $"
        android:textColor="@color/black"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/discount_text_display"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/commissioner_medium"
        android:textColor="@color/very_dark_blue"
        android:textSize="15sp"
        android:text="Discount $-"
        />
    <TextView
        android:id="@+id/tax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/commissioner_regular"
        android:text="Tax $"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/commissioner_medium"
        android:text="Total $"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/checkout_button"
        android:layout_width="352dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:paddingVertical="5dp"
        android:background="@drawable/edittext_background"
        android:backgroundTint="@color/pink"
        android:fontFamily="@font/commissioner_medium"
        android:paddingStart="90dp"
        android:paddingEnd="90dp"
        android:text="Checkout"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cancel_button"
        android:layout_width="352dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:paddingVertical="5dp"
        android:background="@drawable/edittext_background"
        android:backgroundTint="@color/gray"
        android:fontFamily="@font/commissioner_medium"
        android:paddingStart="90dp"
        android:paddingEnd="90dp"
        android:text="Cancel"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold" />
</LinearLayout>