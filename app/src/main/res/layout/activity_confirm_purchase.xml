<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.ConfirmPurchaseActivity">

    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        android:src="@drawable/arrow"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/commissioner_medium"
        android:layout_marginStart="30dp"
        android:textSize="35sp"
        android:textColor="@color/black"
        android:text="Confirm Purchase" />

    <!--Add each item dynamically in this view-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="386dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">
        <LinearLayout
            android:id="@+id/booksAddedContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/subtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:fontFamily="@font/commissioner"
        android:text="Subtotal $"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <Button
        android:id="@+id/checkout_button"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/pink"
        android:fontFamily="@font/commissioner_medium"
        android:paddingStart="90dp"
        android:paddingEnd="90dp"
        android:text="Checkout"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="352dp"
        android:layout_height="52dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/gray"
        android:fontFamily="@font/commissioner_medium"
        android:paddingStart="90dp"
        android:paddingEnd="90dp"
        android:text="Cancel"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />
</LinearLayout>