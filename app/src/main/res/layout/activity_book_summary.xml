<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:id="@+id/backToSearchButton"
                android:layout_width="189dp"
                android:layout_height="18dp"
                android:clickable="true"
                android:orientation="horizontal">

                <Space
                    android:layout_width="13dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:foregroundGravity="left|center"
                    android:src="@drawable/arrow" />

                <TextView
                    android:id="@+id/back_button"
                    android:layout_width="138dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center|left"
                    android:text="Back to search"
                    android:textColor="@color/black" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="293dp"
                android:orientation="horizontal">

                <Space
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/BookImage"
                    android:layout_width="266dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/book" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="0" />

            <LinearLayout
                android:layout_width="366dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/BookTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:text="Book Title"
                    android:textColor="@color/black"
                    android:textSize="32dp" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/authorName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:text="Author Name"
                    android:textColor="#003D60"
                    android:textSize="16dp" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:orientation="horizontal">

                <Space
                    android:layout_width="34dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0" />

                <TextView
                    android:id="@+id/addToCartButton"
                    android:layout_width="343dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edittext_background"
                    android:backgroundTint="@color/black"
                    android:clickable="true"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center"
                    android:text="Add to cart | $price"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <Space
                    android:layout_width="34dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0" />

            </LinearLayout>

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="0"
                android:background="?android:attr/listDivider" />

            <ScrollView
                android:layout_width="356dp"
                android:layout_height="332dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/commissioner_medium"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:text="Description" />
                    <ScrollView
                        android:id="@+id/descContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="25dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="104dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_medium"
                                android:text="Reviews"
                                android:textColor="@color/black"
                                android:textSize="24sp" />

                            <Space
                                android:layout_width="28dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <ImageView
                                android:layout_width="31dp"
                                android:layout_height="31dp"
                                android:layout_weight="1"
                                android:src="@drawable/star"/>

                            <TextView
                                android:id="@+id/AvrgReview"
                                android:layout_width="31dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/commissioner"
                                android:gravity="center"
                                android:text="4.7"
                                android:textColor="@color/pink"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="25dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:orientation="vertical">

                            <ScrollView
                                android:id="@+id/reviews"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <Space
                                android:layout_width="259dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0" />

                            <TextView
                                android:id="@+id/writeReviewButton"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:clickable="true"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="center|right"
                                android:text="Write a review "
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:rotationY="182"
                                android:src="@drawable/arrow" />

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />
                        </LinearLayout>

                </LinearLayout>

            </ScrollView>




        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>